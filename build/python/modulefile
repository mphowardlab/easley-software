\r
\r<<>><<>><<>><<>><<>><<>><<>><<>><<>><<>><<>><<>><<>><<>><<>><<>><<>><<>><<>><<>><<>>
"

module load gcc/8.4.0
module load tbb/2021.1.1
module load mpich/3.3.2
module load python/3.9.2

set             root            <<INSTALL>>
if { [module-info mode load] } {
    system "source $root/bin/activate;"
} elseif { [module-info mode remove] } {
    system "deactivate;"
}

